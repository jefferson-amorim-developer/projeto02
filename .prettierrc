{
    "singleQuote": true,
    "printWidth": 140,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "tabWidth": 4,
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": ["*.component.html"],
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": ["*.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.js"],
            "options": {
                "parser": "babel"
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html",
                "singleQuote": false
            }
        },
        {
            "files": "*.css",
            "options": {
                "parser": "css",
                "singleQuote": false
            }
        },
        {
            "files": "*.scss",
            "options": {
                "parser": "scss",
                "singleQuote": false
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json",
                "singleQuote": false
            }
        }
    ]
}
